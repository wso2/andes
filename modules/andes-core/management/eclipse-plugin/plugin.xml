<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.wso2.andes.management.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Qpid Management"
            icon="icons/mbean_view.png"
            class="org.wso2.andes.management.ui.Perspective"
            id="org.wso2.andes.management.ui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.wso2.andes.management.ui.viewcategory"
            name="Qpid Management Console"/>
      <view
            allowMultiple="false"
            category="org.wso2.andes.management.ui.viewcategory"
            class="org.wso2.andes.management.ui.views.NavigationView"
            icon="icons/qpidConnections.gif"
            id="org.wso2.andes.management.ui.navigationView"
            name="Qpid Connections">
      </view>
      <view
            allowMultiple="false"
            category="org.wso2.andes.management.ui.viewcategory"
            class="org.wso2.andes.management.ui.views.MBeanView"
            icon="icons/mbean_view.png"
            id="org.wso2.andes.management.ui.mbeanView"
            name="Qpid Management">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="qpid.manager.commands"
            id="org.wso2.andes.management.ui.category">
      </category>
      <command
            name="New Connection"
            description="Created a new Qpid server connection"
            categoryId="org.wso2.andes.management.ui.category"
            id="org.wso2.andes.management.ui.actions.cmd_add">
      </command>
      <command
            categoryId="org.wso2.andes.management.ui.category"
            description="Reconnect the Qpid server connection"
            id="org.wso2.andes.management.ui.actions.cmd_reconnect"
            name="Reconnect"/>
      <command
            categoryId="org.wso2.andes.management.ui.category"
            description="Disconnects the Qpid server connection"
            id="org.wso2.andes.management.ui.actions.cmd_disconnect"
            name="Disconnect"/>
      <command
            categoryId="org.wso2.andes.management.ui.category"
            description="Removes the server from management console"
            id="org.wso2.andes.management.ui.actions.cmd_remove"
            name="Remove Connection"/>
      <command
            categoryId="org.wso2.andes.management.ui.category"
            description="refreshes the views"
            id="org.wso2.andes.management.ui.actions.cmd_refresh"
            name="Refresh"/>
      <command
            categoryId="org.wso2.andes.management.ui.category"
            description="About Qpid Management Console"
            id="qpidmc.about"
            name="About"/>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.wso2.andes.management.ui.actions.cmd_add"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+Alt+N">
      </key>
      <key
            commandId="org.wso2.andes.management.ui.actions.cmd_reconnect"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+Alt+C"/>
      <key
            commandId="org.wso2.andes.management.ui.actions.cmd_disconnect"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+Alt+D">
      </key>
      <key
            commandId="org.wso2.andes.management.ui.actions.cmd_remove"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+Alt+R"/>
      <key
            commandId="org.wso2.andes.management.ui.actions.cmd_refresh"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+Alt+F5"/>
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+Alt+X">
      </key>
   </extension>
   
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.wso2.andes.management.ui.application"
            name="Qpid Management Console">
         <property
               name="windowImages"
               value="icons/qpidmc16.gif,icons/qpidmc32.gif">
         </property>
         <property
               name="aboutText"
               value="Qpid Management Console"/>
      </product>
   </extension>

   <extension point="org.eclipse.ui.menus">
       <menuContribution locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
           <toolbar id="qpidMC">
               <separator name="qpidActionsGroup" visible="false"/>
               <separator name="refresh" visible="true"/>
               <separator name="refresh2" visible="false"/>
               <separator name="additions" visible="false"/>
           </toolbar>
       </menuContribution>
       <menuContribution locationURI="toolbar:qpidMC?after=refresh">
           <control
               class="org.wso2.andes.management.ui.RefreshIntervalComboPanel">
           </control>
       </menuContribution>
   </extension>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.wso2.andes.management.ui.actionSet"
            label="Qpid Action Set"
            visible="true">
         <menu
               id="qpidmanager"
               label="&amp;Qpid Manager">
            <separator name="qpidActionsGroup"/>
         </menu>
         <action
               class="org.wso2.andes.management.ui.actions.Refresh"
               definitionId="org.wso2.andes.management.ui.actions.cmd_refresh"
               icon="icons/refresh.gif"
               id="org.wso2.andes.management.ui.actions.refresh"
               label="Refresh"
               menubarPath="qpidmanager/additions"
               style="push"
               toolbarPath="qpidMC/refresh2"
               tooltip="Refresh Now"/>
         <action
               class="org.wso2.andes.management.ui.actions.RemoveServer"
               definitionId="org.wso2.andes.management.ui.actions.cmd_remove"
               icon="icons/delete.gif"
               id="org.wso2.andes.management.ui.actions.remove"
               label="Remove Connection"
               menubarPath="qpidmanager/additions"
               style="push"
               toolbarPath="qpidMC/qpidActionsGroup"
               tooltip="Remove Server"/>
         <action
               class="org.wso2.andes.management.ui.actions.CloseConnection"
               definitionId="org.wso2.andes.management.ui.actions.cmd_disconnect"
               icon="icons/stop.gif"
               id="org.wso2.andes.management.ui.disconnect"
               label="Disconnect"
               menubarPath="qpidmanager/additions"
               toolbarPath="qpidMC/qpidActionsGroup"
               tooltip="Disconnect"/>
         <action
               class="org.wso2.andes.management.ui.actions.ReconnectServer"
               definitionId="org.wso2.andes.management.ui.actions.cmd_reconnect"
               icon="icons/reconnect.gif"
               id="org.wso2.andes.management.ui.reconnect"
               label="Reconnect"
               menubarPath="qpidmanager/additions"
               toolbarPath="qpidMC/qpidActionsGroup"
               tooltip="Reconnect"/>
         <action
               class="org.wso2.andes.management.ui.actions.AddServer"
               definitionId="org.wso2.andes.management.ui.actions.cmd_add"
               icon="icons/add.gif"
               id="org.wso2.andes.management.ui.add"
               label="New Connection"
               menubarPath="qpidmanager/additions"
               toolbarPath="qpidMC/qpidActionsGroup"
               tooltip="New Connection"/>        
      </actionSet>
   </extension>
   
</plugin>
