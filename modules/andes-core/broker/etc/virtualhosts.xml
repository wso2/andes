<virtualhosts>
    <default>cassandra</default>
    <virtualhost>
        <name>cassandra</name>
        <cassandra>
            <store>
                <class>org.wso2.andes.server.store.QpidDeprecatedMessageStore</class>
                <username>admin</username>
                <password>admin</password>
                <cluster>ClusterOne</cluster>
                <connectionString>localhost:9160</connectionString>
            </store>

            <housekeeping>
                <threadCount>2</threadCount>
                <expiredMessageCheckPeriod>20000</expiredMessageCheckPeriod>
            </housekeeping>

            <exchanges>
                <exchange>
                    <type>direct</type>
                    <name>carbon.direct</name>
                    <durable>true</durable>
                </exchange>
                <exchange>
                    <type>topic</type>
                    <name>carbon.topic</name>
                </exchange>
            </exchanges>

            <queues>
                <maximumQueueDepth>4235264</maximumQueueDepth>
                <!-- 4Mb -->
                <maximumMessageSize>2117632</maximumMessageSize>
                <!-- 2Mb -->
                <maximumMessageAge>3600000</maximumMessageAge>
                <!-- 60 mins -->
                <maximumMessageCount>50000</maximumMessageCount>
                <!-- 50000 messages -->
            </queues>
        </cassandra>
    </virtualhost>
</virtualhosts>


